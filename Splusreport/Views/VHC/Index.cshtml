@{
    ViewBag.Title = "VHC";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Styles{
    <style type="text/css">
        body {
            line-height: normal;
            font-size: 13px;
            font-weight: 400;
        }


        .card-header-Title {
            padding: 20px;
        }

            .card-header-Title .card-title {
                color: black;
                text-align: center
            }

        .card-header {
            background: #003ccb;
        }

        .card-title {
            color: yellow;
            float: none;
            font-size: 1.5rem;
            text-align: center;
        }

        .brand-image {
            width: 250px;
        }
    </style>
}
<!-- Content Wrapper. Contains page content -->

<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="../../index3.html">
            <img src="../../dist/img/cong-ty-tnhh-thuong-mai-vhc.jpg"
                 alt="AdminLTE Logo"
                 class="brand-image">
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">

                <div class="info">
                    <a href="#" class="d-block">ADMIN VHC</a>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                   
                    <li class="nav-item">
                        <a href="/mm" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Chi tiết từng cửa hàng
                            </p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <div class="card-header-Title">
        <h2 class="card-title" style="margin: 0 auto;">
            TÌM KIẾM THÔNG TIN HỌC TẬP SAMSUNG PLUS THÁNG @DateTime.Now.Month
        </h2>
    </div>
    <!-- /.card-header -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <div class="wrapper">
            <!-- Main content -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header" style="">
                                    <h2 class="card-title">Theo cửa hàng</h2>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="storedetailId" class="table table-bordered table-hover">
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Theo nhân viên</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="nvdetailId" class="table table-bordered table-hover">
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var loading = new Loading();
            $.ajax({
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                url: "/api/Search/SearchVHC",
                success: function (response) {

                    //Table nv
                    $("#nvdetailId").DataTable({
                        "lengthMenu": [25, 50, 75, 100],
                        "paging": true,
                        "searching": true,
                        "ordering": true,
                        "responsive": true,
                        "data": response.Data,
                        "columns": [
                            {
                                "data": "SPlusCode",
                                "title": "Mã đăng nhập"
                            }, {
                                "data": "Store",
                                "title": "Cửa hàng"
                            }, {
                                "data": "Score",
                                "title": "Điểm"
                            }
                        ],
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                        }
                    });


                    //Table Store
                    $('#storedetailId').DataTable({
                        "lengthMenu": [10, 25, 50, 100],
                        "paging": true,
                        "searching": true,
                        "ordering": true,
                        "responsive": true,
                        "data": response.ListStoreOrder,
                        "columns": [
                            {
                                "data": "StoreName",
                                "title": "Tên Store"
                            }, {
                                "data": "TotalEmployee",
                                "title": "Tổng NV (A)"
                            }, {
                                "data": "TotalTested",
                                "title": "Số NV đã test"
                            }, {
                                "data": "TotalScore",
                                "title": "Tổng điểm (B)"
                            }, {
                                "data": "AverageScore",
                                "title": "ĐTB toàn Store (B/A)"
                            }, {
                                "data": "Order",
                                "title": "Vị thứ"
                            }
                        ],
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                        }
                    });
                },
            }).done(function () {
                loading.out()
            });;
        });


    </script>
}
