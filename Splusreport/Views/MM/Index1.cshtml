@{
    ViewBag.Title = "MediaMart";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Styles{
    <style type="text/css">
        body {
            line-height: normal;
            font-size: 13px;
            font-weight: 400;
        }


        .card-header-Title {
            padding: 20px;
        }

            .card-header-Title .card-title {
                color: black;
                text-align: center
            }

        .card-header {
            background: #ff2035;
        }

        .card-title {
            color: aliceblue;
            float: none;
            font-size: 1.5rem;
            text-align: center
        }

        .brand-image {
            width: 250px;
        }
    </style>
}
<!-- Content Wrapper. Contains page content -->

<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="../../index3.html">
            <img src="../../dist/img/mediamart.png"
                 alt="AdminLTE Logo"
                 class="brand-image">
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">

                <div class="info">
                    <a href="#" class="d-block">ADMIN MM</a>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                   
                    <li class="nav-item">
                        <a href="/mm" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Chi tiết từng cửa hàng
                            </p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <div class="card-header-Title">
        <h2 class="card-title" style="margin: 0 auto;">
            GOLDEN STORE - MEDIAMART - VÒNG 1 - SAMSUNG PLUS THÁNG @DateTime.Now.Month - Report ngày @DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year
        </h2>
		<h3 class="card-title" style="margin: 0 auto;">
            Hệ thống đang bảo trì. Vui lòng quay lại vào 9h00 sáng thứ 7 (27.3.2021)
        </h3>
    </div>
    <!-- /.card-header -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <div class="wrapper">
            <!-- Main content -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header" style="">
                                    <h2 class="card-title">Thứ tự cửa hàng theo điểm GOLD</h2>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="storedetailId" class="table table-bordered table-hover">
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Tra điểm từng nhân viên của cửa hàng</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="nvdetailId" class="table table-bordered table-hover">
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
