@{
    ViewBag.Title = "Điện Máy Xanh";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Styles{
    <style type="text/css">
        body {
            line-height: normal;
            font-size: 13px;
            font-weight: 400;
        }

        .card-header-Title {
            padding: 20px;
        }

            .card-header-Title .card-title {
                color: black;
                text-align: center
            }

        .card-header {
            background: #3fb8ff;
        }

        .card-title {
            color: aliceblue;
            float: none;
            font-size: 1.5rem;
            text-align: center
        }

        .brand-image {
            width: 250px;
        }
    </style>
}
<!-- Content Wrapper. Contains page content -->

<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="../../index3.html">
            <img src="../../dist/img/dien-may-xanh.png"
                 alt="AdminLTE Logo"
                 class="brand-image">
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">

                <div class="info">
                    <a href="#" class="d-block">ADMIN DMX</a>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                    with font-awesome or any other icon font library -->
                    <li class="nav-item">
                        <a href="/dmx/region" class="nav-link">
                            <i class="nav-icon fas fa-chart-pie"></i>
                            <p>
                                Theo vùng miền
                                <span class="right badge badge-danger">New</span>
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/dmx" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Chi tiết từng cửa hàng
                            </p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <div class="card-header-Title">
        <h2 class="card-title" style="margin: 0 auto;">
            TÌM KIẾM THÔNG TIN HỌC TẬP SAMSUNG PLUS THÁNG @DateTime.Now.Month - Report ngày @DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year
        </h2>
    </div>
    <!-- /.card-header -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <div class="wrapper">
            <!-- Main content -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header" style="">
                                    <h2 class="card-title">Theo vùng miền</h2>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="storedetailId" class="table table-bordered table-hover">
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>

@section Scripts{
    <script>

        


        $(document).ready(function () {
            var loading = new Loading();
            $.ajax({
                type: "Post",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                url: "/api/Search/SearchRegion",
                success: function (response) {


                    //Table Store
                    $('#storedetailId').DataTable({
                        "lengthMenu": [10, 25, 50, 100],
                        "paging": false,
                        "searching": false,
                        "ordering": true,
                        "responsive": true,
                        "data": response,
                        "columns": [
                            {
                                "data": "StoreName",
                                "title": "Khu vực"
                            }, {
                                "data": "TotalEmployee",
                                "title": "Tổng NV"
                            }, {
                                "data": "TotalTested",
                                "title": "Số NV đã test"
                            }, {
                                "data": "RateTested",
                                "title": "Phần Trăm hoàn thành (%)"
                            }
                        ],
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                        }, "dom": 'Bfrtip',
                        "buttons": [
                           'excel'
                        ]
                    });
                },

            }).done(function () {
                loading.out()
            });
        });


    </script>
}
